
<h1>Images</h1>

<table>
  <tr>
    <th>
      ID
    </th>
    <th>
      Name
    </th>
    <th>
      Owner
    </th>
    <th>
      Architecture
    </th>
    <th>
      Description
    </th>
  </tr>
  <% for image in @images %>
    <tr>
      <td>
        <%= link_to image.id, image_url( image.id ) %>
      </td>
      <td>
        <%= image.name %>
      </td>
      <td>
        <%= link_to image.owner_id, images_url( :owner_id=>image.owner_id ) %>
      </td>
      <td>
        <%= image.architecture %>
      </td>
      <td>
        <%= image.description %>
      </td>
    </tr>
  <% end %>
</table>
