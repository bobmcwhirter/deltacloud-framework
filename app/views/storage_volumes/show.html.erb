
<h1><%= @volume.id %></h1>

<dl>
  <di>
    <dt>
      Created
    </dt>
    <dd>
      <%= @volume.created %>
    </dd>
  </di>
  <di>
    <dt>
      Capacity
    </dt>
    <dd>
      <%= @volume.capacity %> GB
    </dd>
  </di>
  <di>
    <dt>
      State
    </dt>
    <dd>
      <%= @volume.state %>
    </dd>
  </di>
  <di>
    <dt>
      Attached
    </dt>
    <dd>
      <% if ( @volume.instance_id ) %>
        <%= link_to @volume.instance_id, instance_url( @volume.instance_id ) %> - <%= @volume.device %>
      <% end %>
    </dd>
  </di>
</dl>
